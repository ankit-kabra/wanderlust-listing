<% if (success) { %>
    <div class="offset-3 alert alert-success alert-dismissible fade show mt-3 col-6" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

<% if (error) { %>
    <div class="offset-3 alert alert-danger alert-dismissible fade show mt-3 col-6" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>