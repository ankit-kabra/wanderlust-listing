<% layout("/layouts/boilerplate")%>
<style>
  .filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
  }
 
</style>
<button class="btn btn-outline-primary d-md-none mb-2 mt-2" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#filterContainer" 
        aria-expanded="false" 
        aria-controls="filterContainer">
        show filters
</button>
<div  id="filterContainer" class="collapse d-md-flex flex-wrap align-items-center filters">
  <div class="filter" onclick="applyFilter('Trending')">
    <div>
      <i class="fa-solid fa-fire"></i>
    </div>
    <p>Trending</p>
  </div>
  <div class="filter" onclick="applyFilter('Rooms')">
    <div>
      <i class="fa-solid fa-bed"></i>
    </div>
    <p>Rooms</p>
  </div>
  <div class="filter" onclick="applyFilter('Mountains')">
    <div>
      <i class="fa-solid fa-mountain-sun"></i>
    </div>
    <p>Mountains</p>
  </div>
  <div class="filter" onclick="applyFilter('Castles')">
    <div>
      <i class="fa-brands fa-fort-awesome"></i>
    </div>
    <p>Castles</p>
  </div>
  <div class="filter" onclick="applyFilter('Amazing pools')">
    <div>
      <i class="fa-solid fa-person-swimming"></i>
    </div>
    <p>Amazing pools</p>
  </div>
  <div class="filter" onclick="applyFilter('Camping')">
    <div>
      <i class="fa-solid fa-campground"></i>
    </div>
    <p>Camping</p>
  </div>
  <div class="filter" onclick="applyFilter('Farms')">
    <div>
      <i class="fa-solid fa-snowflake"></i>
    </div>
    <p>Farms</p>
  </div>
  <div class="filter" onclick="applyFilter('Arctic')">
    <div>
      <i class="fa-solid fa-snowflake"></i>
    </div>
    <p>Arctic</p>
  </div>
  <div class="filter" onclick="applyFilter('Iconic cities')">
    <div>
      <i class="fa-solid fa-city"></i>
    </div>
    <p>Iconic cities</p>
  </div> 
  <div class="filter" onclick="applyFilter('Domes')">
    <div>
      <i class="fa-solid fa-landmark-dome"></i>
    </div>
    <p>Domes</p>
  </div>
  <div class="filter" onclick="applyFilter('Boats')">
    <div>
      <i class="fa-solid fa-ship"></i>
    </div>
    <p>Boats</p>
  </div> 

  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListing){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <div class="card-img-overlay"></div>
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing_image" />

      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title || 'No Title Available' %></b>
          <br />
          &#8377;: <%= (listing.price ? listing.price.toLocaleString("en-IN") :
          'N/A') %>
          <i class="tax-info">&nbsp; +18% gst</i>
        </p>
       
      </div>
    </div>
  </a>
  <!-- <li><a href="/listings/<%=listing._id%>"><%=listing.title %></a></li> -->
  <%}%>
</div>
