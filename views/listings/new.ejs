<% layout("/layouts/boilerplate")%>
  <body>
    <div class="text-center mb-4 mt-3" >
    <h2 >Create a New listing</h2>
    </div>
    <form class="row g-3 needs-validation" novalidate method="POST" action="/listings" enctype="multipart/form-data">
      <div class="col-md-6">
        <label for="title" class="form-label"><strong>Title</strong></label>
        <input type="text" name="listing[title]" class="form-control" placeholder="add a catchy title" id="validationCustom02"  required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-6">
        <label for="description" class="form-label"><strong>Description</strong></label>
        <input type="textarea" name="listing[description]" class="form-control" placeholder="" id="validationCustom02"  required>
      </div>
      
      <div class="col-md-6">
        <label for="ImageLink" class="form-label"><strong>ImageLink</strong></label>
          <input type="file" name ="listing[image]" class="form-control" placeholder="enter url link" id="validationCustomUsername" aria-describedby="inputGroupPrepend" >
        <div class="invalid-feedback">
          Please provide a valid URL.
        </div>
      </div>
      <div class="col-md-6">
        <label for="priceInput"  class="form-label"><strong>price</strong></label>
        <input type="text"  id="priceInput" name="listing[price]" class="form-control"  min="0"  placeholder="1000" id="validationCustom03" required>
        <div class="invalid-feedback">
          price should be valid
         </div>
      </div>
  
      <div class="col-md-6">
        <label for="location" class="form-label"><strong>location</strong></label>
        <input type="text" name="listing[location]" class="form-control" placeholder="" id="validationCustom05" required>
        <div class="invalid-feedback">
         location should be valid
         </div>
      </div>

      
      <div class="col-md-6">
        <label for="country" class="form-label"><strong>Country</strong></label>
        <input type="text" name="listing[country]" class="form-control" placeholder="India" id="validationCustom05" required>
      </div>
      <div class="col-md-6">
        <label for="category" class="form-label"><strong>Category</strong></label>
        <select name="listing[category]" class="form-control" required>
          <option value="" disabled selected>Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amazing pools">Amazing pools</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Arctic</option>
          <option value="Domes">Domes</option>
          <option value="Boats">Boats</option>
        </select>
      </div>
            
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
        </div>
      </div>
      <div class="col-12">
        <button class="btn btn-dark add-btn" type="submit">Add</button>
      </div>
    </form>  
  
  </body>

